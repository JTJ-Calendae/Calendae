          </table>
          <div class="columns">
            <div class="column is-half">
              <div class="buttons">
                <button class="button is-link is-light is-fullwidth is-medium" id="previousMonth" onclick="previousMonth()">Previous</button>
              </div>
            </div>
            <div class="column is-half">
              <div class="buttons">
                <button class="button is-link is-light is-fullwidth is-medium" id="nextMonth" onclick="nextMonth()">Next</button>
              </div>
            </div>
          </div>
          <div class="block">
            <h1>Jump to:</h1>
          </div>
          <div class="columns">
            <div class="column is-half">
              <div class="select is-link is-fullwidth">
                <select name="month" id="month" onchange="jumpMonthYear()">
