  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="card">
        <div class="card-header">
          <div class="card-header-title">
            <h1 class="title" id="monthandyear"></h1>
          </div>
        </div>
        <div class="card-content">
          <table class="table is-bordered is-fullwidth" id="calendar">
            <thead>
              <tr>
