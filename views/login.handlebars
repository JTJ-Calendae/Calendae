<h2>Welcome to Calendae</h2>
<div class="container"> A simple social media for planning events smarter</div>

<div class="control">
  <label class="radio">
    <input type="radio" name="foobar" id="loginradio" checked>
    Log In
  </label>
  <label class="radio">
    <input type="radio" name="foobar" id="signupradio">
    Sign Up
  </label>
</div>
<div class="field">
<div class="signupsection" style="display: none;">
  <div class="control">
    <input class="input is-success" id = "firstname-signup" type="text" placeholder="First Name" value="">
  </div>


  <div class="field">
    <div class="control">
      <input class="input is-success" id = "lastname-signup" type="text" placeholder="Last Name" value="">
    </div>
  </div>


  <div class="field">
    <div class="control">
      <input class="input is-success" id = "email-signup" type="text" placeholder="Email Address" value="">
    </div>
  </div>


  <div class="field">
    <div class="control">
      <input class="input is-success" id = "username-signup" type="text" placeholder="Username" value="">
    </div>
  </div>

  <div class="field">
    <div class="control">
      <input class="input is-success" id = "password-signup" type="password" placeholder="Password" value="">
    </div>
  </div>

  <div class="field">
    <div class="control">
      <input class="input is-success" id = "confirmPassword-signup" type="password" placeholder="Confirm password" value="">
    </div>
  </div>


  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link" type="submit" id="submitsignup">Sign Up</button>
    </div>
  </div>
</div>

<div class="loginsection" style="display: block;">
<div class="field">
  <div class="control">
    <input class="input is-success" type="text" placeholder="Username" value="" id="username-login">
  </div>
</div>


<div class="field">
  <div class="control">
    <input class="input is-success" type="password" placeholder="Password" value="" id="password-login">
  </div>
</div>


<div class="field is-grouped">
  <div class="control" >
    <button class="button is-link" type="submit" id="submitlogin">Log In</button>
  </div>
</div>
</div>
</div>

<script src="./js/login.js"></script>